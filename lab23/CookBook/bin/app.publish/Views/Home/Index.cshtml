@model IEnumerable<CookBook.Models.Recipe>
<h4>Поиск рецептов по автору:</h4>
<div>
    @using (Ajax.BeginForm("RecipeSearch", new AjaxOptions { UpdateTargetId = "results" }))
    {
        <input type="text" name="name" />
        <input type="submit" value="Поиск" />
    }
    <div id="results"></div>
</div>
<hr />
<h3>Все Рецепты</h3>
<div class="row mt-2 mb-2">
    @{
        foreach (var recipe in Model)
        {
            <div class="col-lg-" style="background: #efd0aa; padding: 5px 5px 5px 5px; margin: 1px 1px 1px 1px;">

                <img class="img-thumbnail" src="@recipe.Img" alt="@recipe.Title" name="@recipe.Title" width="300" />
                <h2>@recipe.Title</h2>
                <p>@recipe.Author</p>
                <p>@recipe.RecipeDesc</p>
                <p><a class="btn-warning" href="/Home/Show/@recipe.Id">Подробнее</a></p>
            </div>
        }
    }
</div>


@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
